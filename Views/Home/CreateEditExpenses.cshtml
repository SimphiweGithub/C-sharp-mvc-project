@{
    ViewData["Title"] = "Create / Edit Expense";
}
@model WebApplication1.Models.Expenses

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-5 fw-bold">Manage Your Expense</h1>
        <p class="text-muted">Add or edit your expenses to keep track of your finances.</p>
    </div>

    <form asp-action="CreateEditExpensesForm" asp-controller="Home" class="mt-4 shadow p-4 rounded bg-light">
        <div class="mb-3">
            <label class="form-label fw-bold">Expense ID</label>
            <input class="form-control" type="number" placeholder="Enter Expense ID" asp-for="ID" min="0" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Amount (Rands)</label>
            <input class="form-control" type="number" placeholder="Enter amount" asp-for="Value" step="0.01" min="0" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Description</label>
            <input class="form-control" type="text" placeholder="E.g., Grocery shopping, Rent, Utilities" asp-for="Description" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Category</label>
            <select class="form-control" asp-for="Category">
                <option value="Food">Food</option>
                <option value="Transport">Transport</option>
                <option value="Entertainment">Entertainment</option>
                <option value="Rent">Rent</option>
                <option value="Utilities">Utilities</option>
                <option value="Other">Other</option>
            </select>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button class="btn btn-primary w-50 me-2" type="submit"><i class="fas fa-save"></i> Save Expense</button>
            <button class="btn btn-outline-secondary w-50 ms-2" type="reset"><i class="fas fa-undo"></i> Reset</button>
        </div>
    </form>
</div>
