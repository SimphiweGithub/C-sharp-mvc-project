@{
    ViewData["Title"] = "Expenses";
}
@model List<WebApplication1.Models.Expenses>

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 fw-bold">Your Expenses</h1>
        <p class="text-muted">Track and manage your spending efficiently.</p>
    </div>

    @if (Model.Any())
    {
        <table class="table table-striped table-hover mt-4">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Value (R)</th>
                    <th>Description</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td>@expense.ID</td>
                        <td>@expense.Value.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</td>
                        <td>@expense.Description</td>
                        <td>@expense.Category</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center mt-4">
            <i class="fas fa-exclamation-circle"></i> No expenses found. Start by adding a new expense!
        </div>
    }

    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="CreateEditExpenses" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Add Expense
        </a>
    </div>
</div>

