@{
    ViewData["Title"] = "Create / Edit";
}
<!--Rememeber that the at symbol and brackets allow you to use c# code in html through razor-->
@model WebApplication1.Models.Expenses

<div class="text-center">
    <h1 class="display-4">Create / Edit your expenses!</h1>
</div>
<form asp-action="CreateEditExpensesForm" asp-controller="Home">
    <!--Sends this form to CreateEditExpensesForm in the home controller aspController we point to is home-->
    <label >ID</label>
    <input class="form-control" type = "number" placeholder="0" asp-for="ID"/>
    <!--Creating a label for the input form and it takes in a type numer that it passes to Expense.cs ID value that we have created get and set for-->

    <label class="mt-4">Value R</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Value" step="0.01" />
    <!--Step is how much we can increment the value right now it is by 0.01 rands or 1 cent-->

    <label class="mt-4">Description</label>
    <input class="form-control" type="text" placeholder="Add a description" asp-for="Description" />

    <button class="btn btn-primary mt-4" type="submit">Submit</button>
</form>
