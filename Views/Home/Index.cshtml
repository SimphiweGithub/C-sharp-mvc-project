@{
    ViewData["Title"] = "Home";
}

<div class="container text-center mt-5">
    <h1 class="display-4 fw-bold">Welcome to Finance Manager</h1>
    <p class="lead text-muted">Track your expenses, manage your budget, and take control of your finances effortlessly.</p>

    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <a asp-controller="Home" asp-action="Expenses" class="btn btn-primary btn-lg w-100">
                <i class="fas fa-chart-line me-2"></i> View Expenses
            </a>
        </div>
        <div class="col-md-4 mt-3 mt-md-0">
            <a asp-controller="Home" asp-action="CreateEditExpenses" class="btn btn-success btn-lg w-100">
                <i class="fas fa-plus-circle me-2"></i> Add Expense
            </a>
        </div>
    </div>

    <div class="mt-5">
        <img src="~/images/finance-dashboard.png" alt="Finance Overview" class="img-fluid rounded shadow-lg">
    </div>
</div>

