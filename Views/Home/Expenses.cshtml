@{
    ViewData["Title"] = "Expenses";
}
<!--Rememeber that the at symbol and brackets allow you to use c# code in html through razor-->
@model List<Expenses>


<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br/>
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Value
                </th>
                <th>
                    Description
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var expense in Model)
                {
                   <tr>
                        <td>
                            @expense.ID                       
                        </td>
                        <td>
                            @expense.Value
                        </td>
                        <td>
                            @expense.Description
                        </td>
                   </tr> 
                
                }
            }
          
         </tbody>
        </table>
    
</div>
